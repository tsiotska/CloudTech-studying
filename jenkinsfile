pipeline {
    agent any

    stages {
        stage('Infra init') {
            steps {
                dir('./terraform-aws/ecs-module') {
                    sh 'terraform init'
                }
            }
        }
        stage('Infra Plan') {
            steps {
                dir('./terraform-aws/ecs-module') {
                    sh 'terraform plan'
                }
            }
        }
    }
}
